<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- JOURNAL ENTRY FORM VIEW -->
    <record id="sh_inherit_view_move_form_for_import" model="ir.ui.view">
        <field name="name">sh.inherit.view.move.form.for.import</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <button name="action_post" position="after">
                <button name="sh_import_journal_item" states="draft" context="{'sh_journal_entry_id' : id }" string="Import Journal Items" type="object" class="oe_highlight" groups="sh_import_journal_item.sh_import_journal_item_group" />
            </button>
        </field>
    </record>
</odoo>
