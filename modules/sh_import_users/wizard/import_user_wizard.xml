<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_import_user_wizard" model="ir.ui.view">
        <field name="name">sh.import.user.wizard</field>
        <field name="model">import.user.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Users">
                <group>
                    <group>
                        <field name="import_type" widget="radio" />
                        <field name="group_import_type" widget="radio" />
                        <field name="company_id" />
                    </group>
                </group>
                <group>
                    <field name="file" />
                </group>
                <footer>
                    <button name="import_user_apply" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />
                    <div style="float: right;">
                        <strong>Download Sample:</strong>
                        <a role="button" href="/sh_import_users/static/download/import_user_csv.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> CSV file
                        </a>
                        <a role="button" href="/sh_import_users/static/download/import_users_excel.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_import_user_action" model="ir.actions.act_window">
        <field name="name">Import Users</field>
        <field name="res_model">import.user.wizard</field>
        <field name="view_id" ref="sh_import_user_wizard" />
        <field name="target">new</field>
    </record>
    <menuitem id="sh_import_user_wizard_menu" name="Import Users" action="sh_import_user_action" parent="base.menu_users" groups="sh_import_users.sh_import_user_group" />
</odoo>
