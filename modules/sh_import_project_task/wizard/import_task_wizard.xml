<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_import_task_wizard" model="ir.ui.view">
        <field name="name">sh.import.task.wizard</field>
        <field name="model">import.task.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Task">
                <group>
                    <field name="import_method" widget="radio" />
                </group>

                <group>
                    <field name="import_type" widget="radio" />
                    <field name="file" />
                </group>

                <group attrs="{'invisible': [('import_method', '=', 'default')]}">
                    <field name="project_id" attrs="{'required': [('import_method', '=', 'proj_user_wise')]}" />
                    <field name="user_id" attrs="{'required': [('import_method', '=', 'proj_user_wise')]}" />
                </group>

                <footer>
                    <button name="import_task_apply" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />

                    <div style="float: right;">
                        <strong>Download Sample:</strong>
                        <a
                            role="button"
                            href="/sh_import_project_task/static/download/default_import_csv_file.csv"
                            class="btn-primary"
                            style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;"
                        >
                            <i class="fa fa-download" />Default CSV file
                        </a>
                        <a role="button" href="/sh_import_project_task/static/download/default_import_excel_file.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" />Default Excel file
                        </a>
                        <a
                            role="button"
                            href="/sh_import_project_task/static/download/user_and_proj_wise_csv.csv"
                            class="btn-primary"
                            style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;"
                        >
                            <i class="fa fa-download" />User/Project Wise CSV file
                        </a>
                        <a role="button" href="/sh_import_project_task/static/download/user_and_proj_wise_excel.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" />User/Project Wise Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>
    <record id="sh_action_import_task" model="ir.actions.act_window">
        <field name="name">Import Task</field>
        <field name="res_model">import.task.wizard</field>
        <field name="view_id" ref="sh_import_task_wizard" />
        <field name="target">new</field>
    </record>
</odoo>
