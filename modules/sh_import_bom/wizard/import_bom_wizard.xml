<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_import_bom_wizard" model="ir.ui.view">
        <field name="name">sh.import.bom.wizard</field>
        <field name="model">import.bom.wizard</field>
        <field name="arch" type="xml">
            <form string="Import BOM">
                <group>
                    <field name="import_type" widget="radio" />
                    <field name="bom_type" widget="radio" />
                    <field name="product_by" widget="radio" />
                    <field name="file" />
                </group>
                <footer>
                    <button name="import_bom_apply" string="Apply" type="object" class="btn-primary" />
                    <button string="Cancel" class="btn-default" special="cancel" />

                    <div style="float: right;">
                        <strong>Download Sample:</strong>
                        <a role="button" href="/sh_import_bom/static/download/import_bom_csv.csv" class="btn-primary" style="margin: 0 10px; font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> CSV file
                        </a>
                        <a role="button" href="/sh_import_bom/static/download/import_bom_excel.xls" class="btn-primary" style="font-size: 12px; line-height: 1.5; border-radius: 3px; padding: 8px 10px; color: #ffffff;">
                            <i class="fa fa-download" /> Excel file
                        </a>
                    </div>
                </footer>
            </form>
        </field>
    </record>

    <record id="sh_import_bom_action" model="ir.actions.act_window">
        <field name="name">Import Bill of Materials</field>
        <field name="res_model">import.bom.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sh_import_bom_wizard" />
        <field name="target">new</field>
    </record>
</odoo>
